		<validate level="error" rule="regexp" scope="^(true|false)*$" error-info="属性值不合法,必须是(true/false)之一" />
	</rule>
	<rule allow-empty="true" path="/div/@dataList">
		<validate level="error" rule="regexp" scope="^([\w\d],?)+[^,]$" error-info="属性值不合法,请输入数据集列表(逗号分隔)" />
