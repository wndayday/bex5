<?xml version="1.0" encoding="utf-8"?>

<elements>
	<element name="$UI/system/components/justep/codeSelect/codeSelectPC"
		tag-name="div" icon="select.gif" text="编码下拉框(高级)"
		binding-component="$UI/system/components/justep/codeSelect/codeSelectPC"
		component-type="formControl" is-complex-component="true" design-view="web-designer">
		<inner-component-config>
			<item name="$UI/system/components/justep/data/bizData"
				exclude-properties="writer,creator,columns,updateMode,directDelete,confirmDelete,relation,data,column,confirmDeleteText,confirmRefresh,confirmRefreshText,autoNew,nodeLevelRelation,isTree,parentRelation,nodeKindRelation,rootFilter,delayLoad">
				<properties>
					<property name="reader" readonly="true" editor-ref=""
						default-value="/system/logic/action/querySA_CodeAction" />
					<property name="concept" readonly="true" editor-ref=""
						default-value="SA_Code" />
					<property name="offset" readonly="true" editor-ref=""
						default-value="0" />
					<property name="limit" readonly="false" editor-ref=""
						default-value="-1" />
				</properties>
			</item>
		</inner-component-config>
		<properties>
			<property name="xid" text="编号" required="true" />
			<property name="bind-ref" text="引用" editor-ref="dataRef" />
			<property name="bind-labelRef" text="label引用" editor-ref="dataRef" />
			<property name="bind-extRef" text="ext引用" editor-ref="dataRef" />
			<property name="defaultLabel" text="空值显示表达式，当空值时，用此表达式计算结果显示"
				editor-ref="jSExpressionEditor" />
			<property name="valueSeparator" text="多选值分隔符" default-value="," />
			<property name="labelSeparator" text="多选label值分隔符"
				default-value="," />
			<property name="extSeparator" text="多选ext值分隔符"
				default-value="," />
			<property name="multiselect" text="多选" editor-ref="booleanList"
				readonly="true" default-value="false" data-type="boolean" />
			<property name="optionHeight" text="下拉部分高度" default-value="300"
				data-type="integer" />
			<property name="autoOptionWidth" text="下拉部分宽度根据内容自适应"
				default-value="false" editor-ref="booleanList" readonly="true"
				data-type="boolean" />
			<property name="codeType" required="true" text="编码类型" />
			<property name="selectFilter" text="选中过滤表达式" editor-ref="jSExpressionEditor" />
			<group name="option">
				<property name="value" path="option/@value" default-value="sCode"
					required="true" text="与bind-ref对应的列" />
				<property name="label" path="option/@label" default-value="sName"
					text="与bind-labelRef对应的列" />
				<property name="ext" path="option/@ext" default-value="sType"
					text="与bind-extRef对应的列" />
				<property name="multikey" path="option/@multikey" text="多选辅助键"
					editor-ref="multikeyList" readonly="true" />
				<property name="multiboxonly" path="option/@multiboxonly"
					text="仅使用checkBox多选" editor-ref="booleanList" readonly="true"
					default-value="false" data-type="boolean" />
				<property name="multiselectWidth" path="option/@multiselectWidth"
					text="多选列宽" default-value="20" />
			</group>
			<property name="class" text="class">
				<editor-parameter><![CDATA[
				{
					"0base": {
						label: "基础样式",
						value: "x-gridSelect"
					},	 
					"2size": {
						label: "尺寸样式",
						value: "x-gridSelect-lg|x-gridSelect-sm",
						require: false
					}
				}
				]]></editor-parameter>
			</property>
			<property name="style" text="样式" editor-ref="styleDialog" />
			<property name="tabindex" text="Tab键顺序" data-type="integer" />
			<property name="accesskey" text="快捷键" />
			<property name="readonly" text="只读" editor-ref="edit-readonly"
				default-value="false" data-type="boolean" />
			<property name="disabled" text="禁用" editor-ref="edit-disabled"
				default-value="false" data-type="boolean" />
			<include
				path="$UI/system/components/designerCommon/commonConfig.xml#//common-properties/group[@name='bind']" />
		</properties>
		<property-editors>
			<property-editor name="multikeyList" type="list">
				<static-data value=",shiftKey,altKey,ctrlKey" />
			</property-editor>
			<property-editor name="selectCodeType" type="dialog"
				url="$UI/system/components/justep/codeSelect/designer/selectCodeType.w" />
		</property-editors>
		<events>
			<event name="onShowOption" text="显示下拉" />
			<event name="onHideOption" text="关闭下拉" />
			<event name="onUpdateValue" text="把选择的值更新到ref" />
		</events>
		<templates>
			<template name="default"><![CDATA[ 
		      <div class="x-gridSelect" component="$UI/system/components/justep/codeSelect/codeSelectPC">
			    <div component="$UI/system/components/justep/data/bizData" autoLoad="false">
			    </div>
		      	<option>
		            <columns> 
		              <column name="sName"/>  
		            </columns> 
		      	</option> 
		      </div> 
		   ]]></template>
		</templates>
	</element>
	<element name="$UI/system/components/justep/codeSelect/codeSelectPC#option"
		component-type="foreach"
		discriminate-condition="parent()/@component='$UI/system/components/justep/codeSelect/codeSelectPC'"
		tag-name="option" icon="option.gif" text="codeSelect参数">
		<properties>
			<property name="xid" text="编号" required="true" />
			<property name="value" default-value="sCode" required="true"
				text="与bind-ref对应的列" />
			<property name="label" default-value="sName" text="与bind-labelRef对应的列" />
			<property name="ext" default-value="sType" text="与bind-extRef对应的列" />
			<property name="multikey" text="多选辅助键" editor-ref="multikeyList"
				readonly="true" />
			<property name="multiboxonly" text="仅使用checkBox多选"
				editor-ref="booleanList" readonly="true" default-value="false"
				data-type="boolean" />
			<property name="multiselectWidth" text="多选列宽" default-value="20" />
		</properties>
		<property-editors>
			<property-editor name="multikeyList" type="list">
				<static-data value=",shiftKey,altKey,ctrlKey" />
			</property-editor>
		</property-editors>
		<templates>
			<template name="default">
      	<![CDATA[ 
			<option>
			</option>
		]]></template>
		</templates>
		<events>
			<!--组件事件 -->
		</events>
		<toolbar />
	</element>
	<element name="$UI/system/components/justep/codeSelect/codeSelectPC#column"
		tag-name="column" icon="column.gif" text="column" display-property="ref"
		discriminate-condition="parent()/parent()/parent()/@component='$UI/system/components/justep/codeSelect/codeSelectPC'"
		parent-range="$UI/system/components/justep/codeSelect/codeSelectPC#columns"
		d_resiable="false" resizable="false" design-view="web-designer"
		extend="$UI/system/components/justep/gridSelect/gridSelect#column" />
	<element name="$UI/system/components/justep/codeSelect/codeSelectPC#columns"
		tag-name="columns" icon="columns.gif" text="columns"
		discriminate-condition="parent()/parent()/@component='$UI/system/components/justep/codeSelect/codeSelectPC'"
		d_resiable="false" resizable="false" design-view="web-designer"
		extend="$UI/system/components/justep/gridSelect/gridSelect#columns" />
</elements>
