/** button ----------------------------------**/
.x-titlebar{
	.btn-link {
	  height: 40px;//lzg 特殊写法
	  color: inherit;
	  font-size: inherit;
	  &:hover,
	  &:focus {
	    color: inherit;
	    text-decoration: none;
	    background-color: transparent;
	  }
	  &[disabled],
	  fieldset[disabled] & {
	    &:hover,
	    &:focus {
	      color: @btn-link-disabled-color;
	      text-decoration: none;
	    }
	  }
	}
}

.btn-only-label i{
	display: none !important;
}

.btn-only-icon span{
	display: none !important;
}
/*black orange green blue red yellow purple gray*/

.btn{
	  &:active,
	  &.active {
	    .box-shadow(none);
	  }

	&.btn-link:hover,
	&.btn-link:active,
	&.btn-link:focus{
		text-decoration: none;
	}
	/*
	display:-webkit-inline-box;
	-webkit-flex-flow: row;
	-webkit-box-align: center;
	-webkit-box-pack: center;  

	display:-webkit-inline-flex;
	-webkit-flex-direction: row;
	-webkit-justify-content: center;
	-webkit-align-items: center;

	display: -ms-inline-flexbox;
	-ms-flex-direction:row;
	-ms-flex-pack:center;
	-ms-flex-align:baseline;

	display:inline-flex;
	flex-direction:row;
	justify-content: center;
	align-items: center;
	*/
	
	&.x-black {
	  .button-variant(#fff; #474949; #474949);
	}
	
	&.x-red {
	  .button-variant(#fff; #D9230F; #D9230F);
	}
	
	&.x-green {
	  .button-variant(#fff; #469408; #469408);
	}
	
	&.x-blue {
	  .button-variant(#fff; #029ACF; #029ACF);
	}
	
	&.x-orange {
	  .button-variant(#fff; #DF691A; #DF691A);
	}
	
	&.x-yellow {
	  .button-variant(#fff; #f0ad4e; #f0ad4e);
	}
	
	&.x-purple {
	  .button-variant(#fff; #9B479F; #9B479F);
	}

	&.x-gray {
	  .button-variant(#fff; #e7e7e7; #e7e7e7);
	}

