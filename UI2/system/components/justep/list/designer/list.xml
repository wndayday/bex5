					"1style": {
						label: "风格",
						value: "x-cards",
						require: false
					},
					"2ext": {
						label: "table样式",
						value: "table",
						require: false
					},
					"condensed": {
						label: "紧凑型",
						value: "table-condensed",
						require: false
					},
					"striped": {
						label: "条纹状",
						value: "table-striped",
						require: false
					},
					"bordered": {
